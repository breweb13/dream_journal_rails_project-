
<div class= "container">
<div class="card text-center mt-5">
 
  
  <div class="card-body">
  <h3 class="card-title">Sign Up</h3>
  <%= form_for @user do |f| %>
  <div class="m-3">
   <%= f.label :name %>
    <%= f.text_field :name %>
    
  </div>
 
  <div class="m-3">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="m-3">
  <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Sign Up", class:"btn btn-primary"%>
</div>
<% end %>
  
</div>
</div>